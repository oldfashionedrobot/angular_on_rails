angular
  .module('notesApp')
  .component('notesShow', {
    templateUrl: '<%= asset_path("components/notesShow/notesShow") %>',
    controller: NotesShowController
  });

NotesShowController.$inject = ['notesService', '$stateParams'];

function NotesShowController(notesService, $stateParams) {
  var vm = this;

  vm.note = {};

  notesService.getNote($stateParams.id).then(function(resp) {
    vm.note = resp.data;
  });
}
